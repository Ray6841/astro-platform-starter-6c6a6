---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
---

<Layout title="Receiving - WMS Pro">
  <div class="min-h-screen bg-gray-50">
    <Navigation client:load />
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Receiving Operations</h1>
        <p class="mt-2 text-gray-600">Manage inbound shipments and ASN processing</p>
      </div>
      
      <div class="bg-white shadow rounded-lg p-6">
        <div class="text-center">
          <div class="text-6xl mb-4">ðŸ“¥</div>
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Receiving Management</h2>
          <p class="text-gray-600 mb-6">Advanced shipment notices and inbound processing</p>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-blue-50 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-blue-900 mb-2">ASN Management</h3>
              <p class="text-blue-700 text-sm">Schedule and track advanced shipment notices</p>
            </div>
            <div class="bg-green-50 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-green-900 mb-2">Receiving</h3>
              <p class="text-green-700 text-sm">Process inbound shipments and verify receipts</p>
            </div>
            <div class="bg-purple-50 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-purple-900 mb-2">Put-away</h3>
              <p class="text-purple-700 text-sm">Directed put-away with optimal location suggestions</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>